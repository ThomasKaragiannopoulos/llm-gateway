{
  "id": null,
  "uid": "llm-gateway",
  "title": "LLM Gateway",
  "tags": ["llm", "gateway"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "5s",
  "panels": [
    {
      "type": "stat",
      "title": "Gateway Up",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "targets": [
        { "expr": "up{job=\"gateway\"}", "legendFormat": "up" }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "values": false },
        "orientation": "horizontal"
      }
    },
    {
      "type": "timeseries",
      "title": "Request Rate (all paths)",
      "gridPos": { "x": 6, "y": 0, "w": 18, "h": 8 },
      "targets": [
        { "expr": "rate(http_requests_total[1m])", "legendFormat": "{{method}} {{path}}" }
      ],
      "options": {
        "legend": { "showLegend": true }
      }
    }
  ]
}
